---
import '@/styles/global.css';
const { title = '数据看板', active } = Astro.props;
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh bg-slate-50">
    <header class="sticky top-0 z-10 bg-white/80 backdrop-blur border-b">
      <div
        class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between"
      >
        <a href="/" class="font-semibold">21天训练营 · 看板</a>
        <nav class="flex gap-3 text-sm">
          <a
            class={`px-3 py-1 rounded-full ${active === 'boss' ? 'bg-black text-white' : 'hover:bg-slate-100'}`}
            href="/boss">总览</a
          >
          <a
            class={`px-3 py-1 rounded-full ${active === 'leader' ? 'bg-black text-white' : 'hover:bg-slate-100'}`}
            href="/leader">团长</a
          >
          <a
            class={`px-3 py-1 rounded-full ${active === 'coach' ? 'bg-black text-white' : 'hover:bg-slate-100'}`}
            href="/coach">教练</a
          >
        </nav>
      </div>
    </header>
    <main class="mx-auto max-w-7xl px-4 py-6">
      <slot />
    </main>
    <footer class="mx-auto max-w-7xl px-4 py-10 text-xs text-slate-500">
    </footer>
  </body>
</html>
